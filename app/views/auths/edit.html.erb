<div class="form">
  <h1>Update <%= @auth.provider.capitalize %> Account</h1>
  <div class="fields">
  <%= form_for @auth do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="submit">
    <%= f.submit "Update" %>
  </div>

  <% end %>

</div>