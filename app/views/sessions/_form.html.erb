<%= form_tag :sessions do %>
  <div class="fields">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: "email", autofocus: true %>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: "password"  %>
    <div class="submit">
      <%= submit_tag "Sign In" %>
    </div>  
  </div>
<% end %>

<div class="fields">
<p>or, Sign in with:</p>
<%# link_to(image_tag('social_buttons/amazon_32.png'), '/auth/amazon') %>
<%= link_to(image_tag('social_buttons/google_oauth2_32.png'), '/auth/google') %>
</div>