<div id="select-date-set">
  <h2>
    Selection Date: 
    <span>
      <%= @group.select_date.date_in_words %>
    </span>
    <% if current_user_is_group_owner %>
      <span>
        <%= link_to "edit", edit_select_date_path(@group), remote: true, class: "edit-link" %>
      </span>
    <% end %>
  </h2>
</div>